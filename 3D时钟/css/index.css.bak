* {
	margin:0;
}
body {
	background-color:black;
}
.container {
	/* perspective:1000px; */
	transform-style:preserve-3d;
	position:absolute;
	left:0;
	top:0;
	right:0;
	bottom:0;
	width:500px;
	height:500px;
	margin:auto;
	border:1px solid transparent;
	transition:1s linear;
	transform: rotateX(24deg) rotateY(-30deg);
}
.container:hover {
	transform:rotateX(0deg) rotateY(0deg);
}
.hour {
	position:absolute;
	width:370px;
	height:370px;
	border:1px solid #98bdcd;
	border-radius:50%;
	transform:translate3d(65px,65px,30px);
	animation:hourRoll 10s linear infinite;  
}
.hour::before {
	content:"";
	display:block;
	width:370px;
	height:370px;
	border:10px solid #98bdcd;
	border-radius:50%;
	border-top-color:transparent;
	border-bottom-color:transparent;
	transform:translate(-10px,-10px);
}
.minute {
	position:absolute;
	width:450px;
	height:450px;
	border:1px solid #7a929c;
	border-radius:50%;
	transform:translate3d(25px,25px,0); 
	animation:minuteRoll 10s linear infinite; 
}
.box {
	position:absolute;
	width:250px;
	height:250px;
	border:1px solid #a05d55;
	border-radius:50%;
	transform:translate3d(125px,125px,-10px);
	animation:boxRoll 10s linear infinite; 
}
.box::after {
	content:"";
	display:block;
	width:250px;
	height:250px;
	border:10px solid #a05d55;
	border-radius:50%;
	border-top-color:transparent;
	border-bottom-color:transparent; 
	transform:translate(-10px,-10px);
}
.box1 {
	position:absolute;
	width:120px;
	height:120px;
	border:3px solid #58a;
	border-radius:50%;
	border-top-color:transparent;
	transform:translate3d(190px,190px,-30px);
	animation:box1Roll 5s linear infinite; 
}
.box2 {
	position:absolute;
	width:122px;
	height:122px;
	border:1px solid #58a;
	border-radius:50%;
	border-top-color:transparent;
	transform:translate3d(190px,190px,-40px);
	animation:box2Roll 5s linear infinite ; 
}
.second {
	position:absolute;
	width:80px;
	height:80px;
	border:1px solid skyblue;
	border-radius:50%;
	border-top-color:transparent;
	border-right-color:transparent;
	transform:translate3d(210px,210px,-55px);
	animation:secondRoll 1s linear infinite; 
}
